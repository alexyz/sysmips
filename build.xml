<?xml version="1.0" encoding="UTF-8"?>
<project default="jar">

	<property name="jarfile" value="sysmips.jar" />
	
	<target name="compile" unless="eclipse.running">
		<mkdir dir="bin" />
		<javac srcdir="src" destdir="bin" source="1.8" includeAntRuntime="false" />
	</target>

	<target name="jar" depends="compile">
		<jar destfile="dist/${jarfile}">
			<manifest>
				<attribute name="Main-Class" value="sys.ui.MaltaJFrame" />
			</manifest>
			<fileset dir="bin" />
		</jar>
	</target>

	<target name="deploy" depends="jar">
		<copy file="dist/${jarfile}" tofile="${user.home}/Dropbox/Public/${jarfile}" />
	</target>

</project>
